@using System.Security.Claims
@model DemoProject.Models.Person

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Person</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="IndustryID" class="control-label">Industry</label>
                <select name="IndustryID" class="form-control" asp-items="ViewBag.IndustryItems" onchange="submit()">
                    <option value="0">Create New Industry</option>
                </select>
            </div>
            <div class="form-group">
                <label for="IndustryName" class="control-label">Industry Name (For Creation of New Industry)</label>
                <input name="IndustryName" class="form-control" value="@ViewBag.IndustryName" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobID" class="control-label"></label>
                <select asp-for="JobID" class="form-control" asp-items="ViewBag.JobID">
                    <option value="0">Create New Job</option>
                </select>
            </div>
            <div class="form-group">
                <label for="JobName" class="control-label">Job Name (For Creation of New Job)</label>
                <input name="JobName" class="form-control" value="@ViewBag.JobName" />
                <span class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="UserID" value="@(User.FindFirstValue(ClaimTypes.NameIdentifier))" />
            <div class="form-check">
                <input id="PubliclyVisible" name="PubliclyVisible" type="checkbox" class="form-check-input"
                @(ViewBag.PubliclyVisible == "on" ? "checked" : "") />
                <label class="form-check-label" for="PubliclyVisible">Publicly Visible</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
